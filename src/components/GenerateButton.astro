<button
	id='share'
	type='button'
	class='text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800'
	>Generar</button
>

<script>
	const $shareButton = document.querySelector<HTMLButtonElement>('#share')!;

	$shareButton.addEventListener('click', async () => {
		const $namesInput = document.querySelector<HTMLInputElement>('#names');
		const $carrierInput = document.querySelector<HTMLInputElement>('#carrier');

		if (!$namesInput || !$carrierInput)
			return await navigator.clipboard.writeText(window.location.href);

		const url = btoa(
			encodeURIComponent(
				`${$namesInput.value};${
					$carrierInput.value
				};${new Date().toISOString()}`
			)
		);

		const fullURL = window.location.href + url;

		await navigator.clipboard.writeText(fullURL);

		window.location.replace(fullURL);
	});
</script>
